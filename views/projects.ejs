<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects - WEB322</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <div class="hero container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Projects</h1>
    <div class="mb-4">
      <a href="/solutions/projects" class="btn btn-primary">All</a>
      <a href="/solutions/projects?sector=Plastic Bags" class="btn btn-secondary">Plastic Bags</a>
      <a href="/solutions/projects?sector=Carbon Gases" class="btn btn-secondary">Carbon Gases</a>
      <a href="/solutions/projects?sector=Plantation" class="btn btn-secondary">Plantation</a>
    </div>
  </div>

  <div class="container mx-auto p-4">
    <table class="table w-full">
      <thead>
        <tr>
          <th>Title</th>
          <th>Sector</th>
          <th>Summary</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% if (projects && projects.length > 0) { %>
          <% projects.forEach(function(project) { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a class="btn btn-link" href="/solutions/projects?sector=<%= project.sector %>">
                  <%= project.sector %>
                </a>
              </td>
              <td><%= project.summary_short ? project.summary_short : 'No summary provided.' %></td>
              <td>
                <a class="btn" href="/solutions/projects/<%= project.id %>">Details</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No projects available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div id="quote-container" class="container mx-auto p-4">
    <p><strong>Quote:</strong></p>
    <p id="quote-text">Loading quote...</p>
    <p id="quote-author"></p>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(response => response.json())
        .then(data => {
          document.getElementById("quote-text").textContent = `"${data.quote}"`;
          document.getElementById("quote-author").textContent = `â€” ${data.author}`;
        })
        .catch(error => {
          document.getElementById("quote-text").textContent = "Sorry, we couldn't load a quote at this time.";
          document.getElementById("quote-author").textContent = "";
        });
    });
  </script>

  <script src="/js/main.js"></script>
</body>
</html>
