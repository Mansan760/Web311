<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Climate Solution-Mansan Silwal 132326232-Deployed at 2025-03-23 10:00</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '/solutions/addProject' }) %>

  <div class="hero container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Add New Project</h1>
  </div>

  <div class="container mx-auto p-4">
    <form action="/solutions/addProject" method="POST">
      <!-- Title -->
      <div class="form-control">
        <label class="label" for="title">Title</label>
        <input type="text" id="title" name="title" required 
               class="input input-bordered w-full">
      </div>

      <!-- Feature Image URL -->
      <div class="form-control">
        <label class="label" for="feature_img_url">Feature Image URL</label>
        <input type="url" id="feature_img_url" name="feature_img_url" required 
               class="input input-bordered w-full">
      </div>

      <!-- Sector -->
      <div class="form-control">
        <label class="label" for="sector_id">Sector</label>
        <select id="sector_id" name="sector_id" required 
                class="select select-bordered w-full">
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>"><%= sector.sector_name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Intro Short -->
      <div class="form-control">
        <label class="label" for="intro_short">Short Introduction</label>
        <textarea id="intro_short" name="intro_short" required 
                  class="textarea textarea-bordered h-24"></textarea>
      </div>

      <!-- Summary Short -->
      <div class="form-control">
        <label class="label" for="summary_short">Short Summary</label>
        <textarea id="summary_short" name="summary_short" required 
                  class="textarea textarea-bordered h-24"></textarea>
      </div>

      <!-- Impact -->
      <div class="form-control">
        <label class="label" for="impact">Impact</label>
        <textarea id="impact" name="impact" required 
                  class="textarea textarea-bordered h-24"></textarea>
      </div>

      <!-- Source URL -->
      <div class="form-control">
        <label class="label" for="original_source_url">Source URL</label>
        <input type="url" id="original_source_url" name="original_source_url" required 
               class="input input-bordered w-full">
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary mt-4">Add Project</button>
    </form>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>